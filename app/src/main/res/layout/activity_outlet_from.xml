                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:alpha="0.6"
                            android:paddingTop="@dimen/_3sdp"
                            android:src="@drawable/outname1"
                            android:tint="#2085da" />

