                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:maxLength="11"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="@dimen/_13ssp" />
                    </LinearLayout>

                    <View
