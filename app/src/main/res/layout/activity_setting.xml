<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        app:cardElevation="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textSize="@dimen/_20ssp"
                android:fontFamily="@font/nicholson"
                android:textColor="#ffffff"
                android:padding="@dimen/_5sdp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#42a5f5"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Server"
                    android:textSize="@dimen/_17ssp"
                    android:textColor="#FF29B6F6"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/ip"
                    android:gravity="center_vertical"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="xxx.xxx.xxx.xxx"
                    android:imeOptions="actionNext"
                    android:backgroundTint="#FF29B6F6"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Port"
                    android:textSize="@dimen/_17ssp"
                    android:textColor="#FF29B6F6"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/port"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:hint="Enter Port"
                    android:backgroundTint="#FF29B6F6"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:imeOptions="actionDone"
                    android:inputType="numberPassword" />
            </LinearLayout>
            <CheckBox
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SSL"
                android:buttonTint="#FF29B6F6"
                android:textColor="#FF29B6F6"
                android:textSize="@dimen/_13ssp"
                android:checked="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.05dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="#cccccc" />
            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Setting"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/quicksand"
                android:textColor="#9c9c9c"
                android:textStyle="bold"
                android:gravity="center"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="Company Db"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="#FF29B6F6" />
                <EditText
                    android:gravity="center_vertical"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="Enter Database"
                    android:text="123456789"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:backgroundTint="#FF29B6F6"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="User Code"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="#FF29B6F6"
                    android:gravity="center" />
                <EditText
                    android:gravity="center_vertical"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="User Code"
                    android:text="12345"
                    android:backgroundTint="#FF29B6F6"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Password"
                    android:textSize="@dimen/_17ssp"
                    android:textColor="#FF29B6F6"
                    android:gravity="center" />
                <EditText
                    android:gravity="center_vertical"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="Password"
                    android:text="1234567812"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:backgroundTint="#FF29B6F6"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_save_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:background="@drawable/action_button"
                android:textColor="#fff"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>