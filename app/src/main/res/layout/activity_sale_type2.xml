<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".SaleTypeActivity">

    <TextView
        android:id="@+id/tv_sale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="#f51e88e5"
        android:fontFamily="@font/nicholson"
        android:gravity="center"
        android:text="Sale Type"
        android:textColor="#fff"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sale"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/nicholson"
        android:text="Please Select Sale type to proceed further.."
        android:textSize="@dimen/_20sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_pre_sell"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/sale_button"
            android:fontFamily="@font/nicholson"
            android:text="Pre Sell"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_spot_sale"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/sale_button"
            android:fontFamily="@font/nicholson"
            android:text="Spot Sale"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>