<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="5">
           <TextView
               android:visibility="gone"
               android:id="@+id/tvSKUId"
               android:gravity="center"
               android:background="@drawable/back_input"
               android:layout_weight="2"
               android:layout_width="0dp"
               android:layout_height="match_parent"/>
           <TextView
               android:id="@+id/tvSKUModify"
               android:gravity="center"
               android:background="@drawable/back_input"
               android:layout_weight="2"
               android:layout_width="0dp"
               android:layout_height="match_parent"/>
           <EditText
               android:visibility="gone"
               android:id="@+id/et_SKU_quantity"
               android:gravity="center"
               android:background="@drawable/back_input"
               android:layout_weight="1.5"
               android:layout_width="0dp"
               android:imeOptions="actionDone"
               android:inputType="number"
               android:textCursorDrawable="@drawable/cursor_color"
               android:layout_height="match_parent"/>
           <TextView
               android:id="@+id/tv_SKU_quantity"
               android:gravity="center"
               android:background="@drawable/back_input"
               android:layout_weight="1.5"
               android:layout_width="0dp"
               android:layout_height="match_parent"/>
          <LinearLayout
              android:background="@drawable/back_input"
              android:layout_weight="1.5"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="2">
              <ImageView
                  android:id="@+id/edit_order"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="@dimen/_20sdp"
                  android:src="@drawable/edit"/>
              <ImageView
                  android:visibility="gone"
                  android:id="@+id/save_new"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="@dimen/_20sdp"
                  android:src="@drawable/save"/>
              <ImageView
                  android:id="@+id/delete_order"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="@dimen/_20sdp"
                  android:src="@drawable/delete"
                  android:tint="#d50000"/>
          </LinearLayout>
       </LinearLayout>
</LinearLayout>