<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/backgr14">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:visibility="gone"
                android:id="@+id/trend"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/trend"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_2sdp"/>
            <android.support.v7.widget.CardView
                app:cardBackgroundColor="#0080D4"
                android:layout_below="@+id/trend"
                android:id="@+id/card_login"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_7sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_username"
                        android:drawableLeft="@drawable/user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_input_login"
                        android:hint="User Name"
                        android:drawablePadding="@dimen/_10sdp"
                        android:inputType="text"
                        android:drawableTint="#0080D4"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:imeOptions="actionNext"/>

                    <EditText
                        android:id="@+id/et_password"
                        android:drawableLeft="@drawable/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/back_input_login"
                        android:hint="Password"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:inputType="textPassword"
                        android:drawableTint="#0080D4"/>


                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginBottom="@dimen/_14sdp"
                        android:background="@drawable/back_button_login"
                        android:text="Log in"
                        android:textAllCaps="false"
                        android:textColor="#0080D4"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <TextView
                android:id="@+id/tv_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="Setting"
                android:textStyle="italic"
                android:textSize="@dimen/_12ssp"
                android:textColor="#42a5f5" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:text="Powered by JYA Consulting"
                android:textSize="@dimen/_12ssp"
                android:textColor="#42a5f5" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>