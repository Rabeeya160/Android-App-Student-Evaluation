<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedOutletActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/back_outletinfo"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_selected_outlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:gravity="center_horizontal"
                android:text="Outlet Name"
                android:textColor="#ffffff"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outlet_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:gravity="center_horizontal"
                android:text="Address"
                android:textColor="#fff"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outlet_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:gravity="center_horizontal"
                android:text="Phone Number"
                android:textColor="#fff"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outlet_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:gravity="center_horizontal"
                android:text="Owner Name"
                android:textColor="#fff"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:weightSum="7">

            <Button
                android:id="@+id/btn_take_order"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/tab_button"
                android:drawableRight="@drawable/next"
                android:drawableTint="#ffffff"
                android:fontFamily="@font/nicholson"
                android:text="Take Order"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/outlet_temp_close"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/tab_button"
                android:drawableLeft="@drawable/navigate"
                android:drawableTint="#ffffff"
                android:fontFamily="@font/nicholson"
                android:text="Outlet Temporarily Closed"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/outlet_perm_close"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/tab_button"
                android:drawableLeft="@drawable/navigate"
                android:drawableTint="#ffffff"
                android:fontFamily="@font/nicholson"
                android:text="Permanently Closed"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/outlet_stock"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/tab_button"
                android:drawableLeft="@drawable/navigate"
                android:drawableTint="#ffffff"
                android:fontFamily="@font/nicholson"
                android:text="Sufficient Stock"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/outlet_no_cash"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/tab_button"
                android:drawableLeft="@drawable/navigate"
                android:drawableTint="#ffffff"
                android:fontFamily="@font/nicholson"
                android:text="No Cash"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/outlet_wharehouse"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/tab_button"
                android:drawableLeft="@drawable/navigate"
                android:drawableTint="#ffffff"
                android:fontFamily="@font/nicholson"
                android:text="Buying from Wholesale"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/outlet_not_intereste"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/tab_button"
                android:drawableLeft="@drawable/navigate"
                android:drawableTint="#ffffff"
                android:fontFamily="@font/nicholson"
                android:text="Not Intrested In Our Products"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
